<form action="/vacantes/editar/{{vacante.url}}" class="default-form" method="POST">
    <h3>Informacion General</h3>

    <div class="campo">
        <label>Titulo</label>
        <input type="text" name="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}">
    </div>
    <div class="campo">
        <label>Empresa</label>
        <input type="text" name="empresa" placeholder="Ej: Empresa Contrata" value="{{vacante.empresa}}">
    </div>
    <div class="campo">
        <label>Ubicacion</label>
        <input type="text" name="ubicacion" placeholder="Ej: Mexico o Remoto" value="{{vacante.ubicacion}}">
    </div>
    <div class="campo">
        <label>Salario (USD)</label>
        <input type="text" name="salario" placeholder="Ej: 500 USD" value="{{vacante.salario}}">
    </div>
    <div class="campo">
        <label>Contrato</label>
        <select name="contrato">
            {{#tipoContrato vacante.contrato}}
                <option value="" selected disabled>-- Selecciona --</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
            {{/tipoContrato}}
        </select>
    </div>
    <h3>Descripcion del Puesto</h3>
    <div class="campo descripcion">
        <label>Descripcion</label>
        {{!-- <input type="text" id="x" name="descripcion"> --}}
        <input type="hidden" id="x" name="descripcion" value="{{{vacante.descripcion}}}">
        <trix-editor input="x"></trix-editor>
    </div>

    <h3>Conocimientos</h3>
    <ul class="lista-conocimientos">
        {{#seleccionarSkills vacante.skills}}
        {{/seleccionarSkills}}
    </ul>

    <div class="campo centrar-horizontal">
        <input type="hidden" name="skills" id="skills">
        <input type="submit" value="Guardar Cambios" class="btn btn-azul">
    </div>
</form>
